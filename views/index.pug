<!DOCTYPE html>
html(lang="en")
  head
    block head
      meta(charset="UTF-8")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      meta(name="theme-color", content="#ffffff")
      title Skribul

      meta(property="og:title" content="Skribul")

      link(rel="apple-touch-icon" sizes="180x180" href="/icons/apple-touch-icon.png")
      link(rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png")
      link(rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png")
      link(rel="mask-icon" href="/icons/safari-pinned-tab.svg" color="#ffffff")
      link(rel="msapplication-TileColor" content="#ffffff")
      link(rel="manifest" href="/manifest.webmanifest")

      link(rel="stylesheet", href="styles/skribul.css")
      link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
      link(href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet")
  body
    canvas(id="canvas")

    .colors
      each color in ['black', 'white', 'red', 'orange', 'yellow', 'green', 'blue', 'indigo', 'violet']
        button(type="button", class="color shadow", onclick="setStyle('" + color + "')", style="background: " + color + ";", title=color)

    .menu
      block menu
        button(type="button", class="menu-item save shadow", onclick="save()", title="Save")
          i.material-icons save
        a(href="/", class="menu-item clear shadow", title="New")
          i.material-icons refresh


    #overlay.overlay
      h4 Saving...

    block scripts
      script(src="scripts/skribul.js")